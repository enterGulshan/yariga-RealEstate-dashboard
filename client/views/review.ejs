<%- include('head', { title: 'YARIGA - Reviews' }) -%>

<div class="dashboard-layout">
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="d-flex align-items-center p-3 border-bottom">
      <div class="d-flex align-items-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#2563eb" class="bi bi-buildings me-2" viewBox="0 0 16 16">
          <path d="M14.763.075A.5.5 0 0 1 15 .5v15a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5V14h-1v1.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V10a.5.5 0 0 1 .342-.474L6 7.64V4.5a.5.5 0 0 1 .276-.447l8-4a.5.5 0 0 1 .487.022Z"/>
        </svg>
        <h4 class="mb-0 text-primary fw-bold">Yariga</h4>
      </div>
    </div>
    
    <div class="p-3">
      <div class="nav flex-column">
        <a href="/dashboard" class="nav-link mb-2">
          <i class="bi bi-grid me-2"></i> Dashboard
        </a>
        <a href="/property" class="nav-link mb-2">
          <i class="bi bi-building me-2"></i> Property
        </a>
        <a href="/agent" class="nav-link mb-2">
          <i class="bi bi-people me-2"></i> Agent
        </a>
        <a href="/review" class="nav-link active mb-2">
          <i class="bi bi-star me-2"></i> Review
        </a>
        <a href="/message" class="nav-link mb-2">
          <i class="bi bi-chat me-2"></i> Message
        </a>
        <a href="/profile" class="nav-link">
          <i class="bi bi-person me-2"></i> My Profile
        </a>
        <hr class="my-3">
        <a href="/logout" class="nav-link text-danger">
          <i class="bi bi-box-arrow-right me-2"></i> Logout
        </a>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <!-- Top Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom py-3">
      <div class="container-fluid px-4">
        <h5 class="mb-0 fw-bold">Review List</h5>
        <div class="d-flex align-items-center">
          <div class="position-relative me-3">
            <div class="input-group">
              <span class="input-group-text border-end-0 bg-transparent">
                <i class="bi bi-search"></i>
              </span>
              <input type="text" class="form-control border-start-0" placeholder="Search Property, Customer etc..." style="width: 300px;">
            </div>
          </div>
          <div class="d-flex align-items-center">
            <!-- Dark/Light Mode Toggle -->
            <button class="btn btn-light rounded-circle me-3" id="darkModeToggle" title="Toggle Dark Mode">
              <i class="bi bi-moon-fill" id="darkModeIcon"></i>
            </button>
            <!-- Notification -->
            <div class="position-relative me-3">
              <button class="btn btn-light rounded-circle position-relative">
                <i class="bi bi-bell"></i>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                  3
                </span>
              </button>
            </div>
            <div class="d-flex align-items-center">
              <img src="https://ui-avatars.com/api/?name=<%= user.name %>&background=random" class="rounded-circle me-2" width="40" height="40">
              <div>
                <div class="fw-bold"><%= user.name %></div>
                <small class="text-muted">Company Manager</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <!-- Review Content -->
    <div class="container-fluid px-4 py-4">
      <!-- Header with Filter Tabs -->
      <div class="card border-primary" style="border: 2px solid #007bff;">
        <div class="card-header bg-white">
          <h4 class="mb-0 text-primary fw-bold">Review List</h4>
        </div>
        
        <!-- Filter Tabs -->
        <div class="card-body p-0">
          <div class="border-bottom">
            <ul class="nav nav-tabs border-0" style="padding: 0 1rem;">
              <li class="nav-item">
                <a class="nav-link <%= selectedStatus === 'All Reviews' ? 'active' : '' %>" 
                   href="?status=All Reviews" 
                   style="<%= selectedStatus === 'All Reviews' ? 'border-bottom: 3px solid #007bff; color: #007bff;' : 'color: #6c757d;' %>">
                  All Reviews
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link <%= selectedStatus === 'Published' ? 'active' : '' %>" 
                   href="?status=Published"
                   style="<%= selectedStatus === 'Published' ? 'border-bottom: 3px solid #007bff; color: #007bff;' : 'color: #6c757d;' %>">
                  Published
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link <%= selectedStatus === 'Deleted' ? 'active' : '' %>" 
                   href="?status=Deleted"
                   style="<%= selectedStatus === 'Deleted' ? 'border-bottom: 3px solid #007bff; color: #007bff;' : 'color: #6c757d;' %>">
                  Deleted
                </a>
              </li>
            </ul>
          </div>

          <!-- Success/Error Messages -->
          <div class="px-3 pt-3">
            <%- message %>
          </div>

          <!-- Reviews List -->
          <div class="p-3">
            <% if (reviews.length === 0) { %>
              <div class="text-center py-5">
                <i class="bi bi-star" style="font-size: 4rem; color: #dee2e6;"></i>
                <h5 class="mt-3 text-muted">No reviews found</h5>
                <p class="text-muted">No reviews match your current filter criteria.</p>
              </div>
            <% } else { %>
              <% reviews.forEach(review => { %>
                <div class="review-item border-bottom py-3">
                  <div class="row align-items-start">
                    <!-- Customer Info -->
                    <div class="col-md-3">
                      <div class="d-flex align-items-center">
                        <img src="<%= review.customerAvatar %>" class="rounded-circle me-3" width="50" height="50" alt="<%= review.customerName %>">
                        <div>
                          <div class="text-primary fw-bold small">#<%= review.reviewId %></div>
                          <div class="fw-bold"><%= review.customerName %></div>
                          <div class="small text-muted">Join On <%= review.dateJoined.toLocaleDateString('en-US', { day: '2-digit', month: 'short', year: 'numeric' }) %></div>
                          <div class="small text-muted"><%= review.timePosted %></div>
                        </div>
                      </div>
                    </div>

                    <!-- Review Content -->
                    <div class="col-md-6">
                      <div class="mb-2">
                        <span class="fw-bold text-primary"><%= review.service %></span>
                      </div>
                      <p class="mb-2 text-muted"><%= review.description %></p>
                      
                      <!-- Tags -->
                      <div class="mb-2">
                        <% review.tags.forEach(tag => { %>
                          <% let tagClass = 'btn-outline-primary'; %>
                          <% if (tag === 'EXCELLENT' || tag === 'GREAT' || tag === 'BEST SERVICE') tagClass = 'btn-outline-success'; %>
                          <% if (tag === 'BAD SERVICE') tagClass = 'btn-outline-danger'; %>
                          <% if (tag === 'UNEXPECTED') tagClass = 'btn-outline-warning'; %>
                          <span class="btn btn-sm <%= tagClass %> me-2 mb-1"><%= tag %></span>
                        <% }); %>
                      </div>
                    </div>

                    <!-- Rating and Actions -->
                    <div class="col-md-3 text-end">
                      <!-- Rating -->
                      <div class="mb-3">
                        <span class="h4 fw-bold"><%= review.rating %>.0</span>
                        <div>
                          <% for(let i = 1; i <= 5; i++) { %>
                            <i class="bi bi-star-fill text-warning"></i>
                          <% } %>
                        </div>
                      </div>

                      <!-- Action Buttons -->
                      <div class="d-flex flex-column gap-2">
                        <% if (!review.actions.reject) { %>
                          <form method="POST" action="/review/<%= review._id %>/reject" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm w-100">Reject</button>
                          </form>
                        <% } %>
                        <% if (!review.actions.approve || review.actions.reject) { %>
                          <form method="POST" action="/review/<%= review._id %>/approve" class="d-inline">
                            <button type="submit" class="btn btn-success btn-sm w-100">Approve</button>
                          </form>
                        <% } else { %>
                          <button class="btn btn-success btn-sm w-100" disabled>Approved</button>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>
              <% }); %>
            <% } %>
          </div>

          <!-- Pagination -->
          <% if (totalPages > 1) { %>
            <div class="d-flex justify-content-between align-items-center px-3 pb-3">
              <div>
                <small class="text-muted">Showing 1 to <%= reviews.length %> Reviews</small>
              </div>
              <nav>
                <ul class="pagination pagination-sm mb-0">
                  <% if (currentPage > 1) { %>
                    <li class="page-item">
                      <a class="page-link" href="?page=<%= currentPage - 1 %>&status=<%= selectedStatus %>">
                        <i class="bi bi-chevron-left"></i>
                      </a>
                    </li>
                  <% } %>
                  
                  <% for (let i = 1; i <= Math.min(6, totalPages); i++) { %>
                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                      <a class="page-link" href="?page=<%= i %>&status=<%= selectedStatus %>"><%= i %></a>
                    </li>
                  <% } %>
                  
                  <% if (currentPage < totalPages) { %>
                    <li class="page-item">
                      <a class="page-link" href="?page=<%= currentPage + 1 %>&status=<%= selectedStatus %>">
                        <i class="bi bi-chevron-right"></i>
                      </a>
                    </li>
                  <% } %>
                </ul>
              </nav>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Dark Mode Toggle Functionality
document.addEventListener('DOMContentLoaded', function() {
  const darkModeToggle = document.getElementById('darkModeToggle');
  const darkModeIcon = document.getElementById('darkModeIcon');
  const body = document.body;

  // Check for saved dark mode preference or default to light mode
  const isDarkMode = localStorage.getItem('darkMode') === 'true';
  
  // Apply the saved preference
  if (isDarkMode) {
    body.classList.add('dark-mode');
    darkModeIcon.className = 'bi bi-sun-fill';
  }

  // Toggle dark mode
  darkModeToggle.addEventListener('click', function() {
    body.classList.toggle('dark-mode');
    const isNowDark = body.classList.contains('dark-mode');
    
    // Update icon
    darkModeIcon.className = isNowDark ? 'bi bi-sun-fill' : 'bi bi-moon-fill';
    
    // Save preference
    localStorage.setItem('darkMode', isNowDark);
  });
});
</script>

<%- include('foot') -%>
