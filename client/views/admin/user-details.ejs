<%- include('../partials/head', { title: 'YARIGA - User Details' }) %>
<%- include('../partials/sidebar') %>

<div class="main-content">
  <%- include('../partials/header') %>

  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>User Details</h2>
      <a href="/admin" class="btn btn-outline-primary">Back to Users</a>
    </div>

    <%- message %>

    <div class="row">
      <div class="col-md-4">
        <div class="card">
          <div class="card-body text-center">
            <img src="<%= targetUser.profilePicture %>" alt="<%= targetUser.name %>" class="rounded-circle mb-3" width="128" height="128">
            <h3 class="card-title"><%= targetUser.name %></h3>
            <p class="text-muted">@<%= targetUser.username %></p>
            <span class="badge <%= targetUser.isActive ? 'bg-success' : 'bg-danger' %>">
              <%= targetUser.isActive ? 'Active' : 'Inactive' %>
            </span>
          </div>
        </div>
      </div>

      <div class="col-md-8">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Account Information</h4>
            <dl class="row">
              <dt class="col-sm-3">Email</dt>
              <dd class="col-sm-9"><%= targetUser.email || 'Not provided' %></dd>

              <dt class="col-sm-3">Role</dt>
              <dd class="col-sm-9">
                <form action="/admin/users/<%= targetUser._id %>/update-role" method="POST" class="d-inline">
                  <select name="role" class="form-select" onchange="this.form.submit()">
                    <option value="user" <%= targetUser.role === 'user' ? 'selected' : '' %>>User</option>
                    <option value="agent" <%= targetUser.role === 'agent' ? 'selected' : '' %>>Agent</option>
                    <option value="admin" <%= targetUser.role === 'admin' ? 'selected' : '' %>>Admin</option>
                  </select>
                </form>
              </dd>

              <dt class="col-sm-3">Joined</dt>
              <dd class="col-sm-9"><%= new Date(targetUser.createdAt).toLocaleString() %></dd>

              <dt class="col-sm-3">Last Login</dt>
              <dd class="col-sm-9"><%= targetUser.lastLogin ? new Date(targetUser.lastLogin).toLocaleString() : 'Never' %></dd>
            </dl>

            <div class="mt-4">
              <form action="/admin/users/<%= targetUser._id %>/toggle-status" method="POST" class="d-inline">
                <button type="submit" class="btn btn-<%= targetUser.isActive ? 'danger' : 'success' %>">
                  <%= targetUser.isActive ? 'Deactivate Account' : 'Activate Account' %>
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/foot') %>
